<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/entry_phone_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/entry_phone_header_text_view"
                android:text="@string/entry_phone_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGray"
                android:paddingLeft="@dimen/margin_sm"
                android:paddingRight="@dimen/margin_sm"
                android:textSize="@dimen/font_sm"
                android:textStyle="bold"
                tools:text="Phone" />

            <LinearLayout
                android:id="@+id/clickable_phone_linear_layout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_sm"
                android:paddingTop="@dimen/margin_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/entry_phone_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_sm"
                    android:layout_marginLeft="@dimen/margin_lg"
                    android:layout_marginRight="@dimen/margin_lg"
                    tools:text= "555-555-5555" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/entry_email_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/entry_email_header_text_view"
                android:text="@string/entry_email_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGray"
                android:paddingLeft="@dimen/margin_sm"
                android:paddingRight="@dimen/margin_sm"
                android:textSize="@dimen/font_sm"
                android:textStyle="bold"
                tools:text="Email" />

            <LinearLayout
                android:id="@+id/clickable_email_linear_layout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_sm"
                android:paddingTop="@dimen/margin_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/entry_email_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_sm"
                    android:layout_marginLeft="@dimen/margin_lg"
                    android:layout_marginRight="@dimen/margin_lg"
                    tools:text= "abc@gmail.com" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/entry_address_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/entry_address_header_text_view"
                android:text="@string/entry_address_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGray"
                android:paddingLeft="@dimen/margin_sm"
                android:paddingRight="@dimen/margin_sm"
                android:textSize="@dimen/font_sm"
                android:textStyle="bold"
                tools:text="Address" />

            <LinearLayout
                android:id="@+id/clickable_address_linear_layout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_sm"
                android:paddingTop="@dimen/margin_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/entry_line2_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_sm"
                    android:layout_marginLeft="@dimen/margin_lg"
                    android:layout_marginRight="@dimen/margin_lg"
                    tools:text= "Line 2" />

                <TextView
                    android:id="@+id/entry_line3_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_sm"
                    android:layout_marginLeft="@dimen/margin_lg"
                    android:layout_marginRight="@dimen/margin_lg"
                    tools:text= "Line 3" />

                <TextView
                    android:id="@+id/entry_street_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_sm"
                    android:layout_marginLeft="@dimen/margin_lg"
                    android:layout_marginRight="@dimen/margin_lg"
                    tools:text= "Street" />

                <TextView
                    android:id="@+id/entry_city_state_zip_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_sm"
                    android:layout_marginLeft="@dimen/margin_lg"
                    android:layout_marginRight="@dimen/margin_lg"
                    tools:text= "City, State ZIP" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/entry_contact_info_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/entry_contact_info_header_text_view"
                android:text="@string/entry_contact_info_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGray"
                android:paddingLeft="@dimen/margin_sm"
                android:paddingRight="@dimen/margin_sm"
                android:textSize="@dimen/font_sm"
                android:textStyle="bold"
                tools:text="Contact Info" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/entry_children_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/entry_children_header_text_view"
                android:text="@string/entry_children_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGray"
                android:paddingLeft="@dimen/margin_sm"
                android:paddingRight="@dimen/margin_sm"
                android:textSize="@dimen/font_sm"
                android:textStyle="bold"
                tools:text="Children" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>